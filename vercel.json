{
  "version": 2,
  "devCommand": "cd frontend && npm install && npm run dev:all",
  "buildCommand": "cd frontend && npm install && npm run build",
  "builds": [
    { "src": "frontend/api/**/*.ts",  "use": "@vercel/node" },
    { "src": "frontend/api/server.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/frontend/api/$1" },
    { "handle": "filesystem" },
    { "src": "/.*",     "dest": "/index.html" }
  ],
  "env": {
    "VITE_API_URL": "/api"
  }
}
